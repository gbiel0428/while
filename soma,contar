import os
os.system("cls")

contar = 0
soma = 0


while True:
    valor = int(input("Digite um valor: "))
    if valor >= 0:
     contar += 1 
     soma += valor
     media = soma / contar
    if valor <0:
      break
     
print(f"SUA media foi: {media}")
print(F"A quantidade foi: {contar}")
print(f"A soma foi: {soma}")
